<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.dioses.weather.common.utils.CommonUtils" />

        <variable
            name="viewModel"
            type="com.dioses.weather.mainModule.viewModel.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mainModule.view.MainActivity">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_time_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.result.timezone.replace(`_`,` `)}"
            android:textAppearance="?attr/textAppearanceHeadline4"
            android:textColor="?attr/colorSecondaryVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="TimeZone" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_current_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_current_weather_title"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_time_zone" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/common_padding_min"
            android:paddingHorizontal="@dimen/common_padding_default"
            app:layout_constraintTop_toBottomOf="@id/text_view_current_title">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{@string/weather_temp(viewModel.result.current.temp)}"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="?attr/colorSecondary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="234.2 FÂ°" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_data_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/weather_dt(CommonUtils.INSTANCE.getHour(viewModel.result.current.dt))}"
                android:textAppearance="?attr/textAppearanceBody1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="22:00" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/weather_humidity(viewModel.result.current.humidity)}"
                android:textAppearance="?attr/textAppearanceBody1"
                app:layout_constraintStart_toStartOf="@id/text_view_data_time"
                app:layout_constraintTop_toBottomOf="@id/text_view_data_time"
                tools:text="Humidity: 65%" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.result.current.weather[0].main}"
                android:textAppearance="?attr/textAppearanceBody1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Clouds" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.result.current.weather[0].description}"
                android:textAppearance="?attr/textAppearanceCaption"
                app:layout_constraintEnd_toEndOf="@id/text_view_main"
                app:layout_constraintTop_toBottomOf="@id/text_view_main"
                tools:text="Few clouds" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/color_divider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_view_time_zone" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>